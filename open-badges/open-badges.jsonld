  "seeAlso": "https://github.com/ht2/BadgesCoP",
  "seeAlso": "https://www.imsglobal.org/sites/default/files/Badges/OBv2p0/extensions/index.html",
  "author": {
    "type": "Organization",
    "name": "xAPI Open Badges Community of Practice"
